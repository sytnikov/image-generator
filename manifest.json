{
  "manifest_version": 3,
  "name": "AI Image Generator",
  "description": "Generate an image from a text prompt",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
